{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "vite-plugin-svgr/client",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "@store": ["store/"],
      "@store/*": ["store/*"],
      "@constants": ["constants/"],
      "@contexts": ["contexts/"],
      "@utils": ["utils/"],
      "@hooks": ["hooks/"],
      "@types": ["types/"],
      "@pages": ["pages/"],
      "@components": ["components/"],
      "@components/*": ["components/*"],
      "@core": ["core/"],
      "@core/*": ["core/*"],
      "@localization": ["localization/"],
      "@layout": ["layout/"],
      "~styles": ["styles/"],
      "~assets": ["assets/"]
    }
  },
  "include": ["src"]
}
